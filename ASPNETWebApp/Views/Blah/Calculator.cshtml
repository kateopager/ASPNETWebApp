@{
    ViewData["Title"] = "Kate Opager's Killer Site";
    
}
@model CalculatorModel;

<h2 style="color:rosybrown; font-weight:bolder"> Calculate your grade</h2>
<br />
<p>
    Input the total percentage you received for each category into the calculator form below. <br />The final grade will be estimated
    and then output based off these submissions.Please only submit a valid number from 0 to 100.
</p>
<br />
<form method="post">
    <!--in the form I created inputs that receive number values, give them ids(to pass to the js function), and at the end submit them with the button-->
    <label> Assignments </label> <br />
    <input id="Assignments" type="number" asp-for="Assignments"/> <br />
    <label> Group Project </label> <br />
    <input id="GP" type="number" asp-for="GP"/> <br />
    <label> Quizzes</label> <br />
    <input id="Q" type="number" asp-for="Q" /><br />
    <label> Midterm Exam </label> <br />
    <input id="ME" type="number" asp-for="ME" /> <br />
    <label> Final Exam </label> <br />
    <input id="FE" type="number" asp-for="FE"/> <br />
    <label> Intex </label> <br />
    <input id="I" type="number" asp-for="I" /> <br /> <br />
    <input id="calculate" type="submit" style="border:none;background-color:rosybrown;color:floralwhite;font-weight:bolder" value="Submit" /><br /><br />
    
    <div asp-validation-summary ="All">
    </div>

</form>
<div>
    <p id="result" style="font-size:30px"></p>
</div>
<!--The scripts below should be including the js calculator, the jquery shortcut/library, and the bootstrap library-->
<script src="js/GradeCalculator.js"></script>